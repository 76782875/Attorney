<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lvshishenhe_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginRight="95px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="律师审核"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:text="欢迎成为我们合作的律师!"
        android:textSize="36px"
        android:layout_marginTop="20px"
        android:textColor="#333333"/>

    <TextView
        android:layout_marginLeft="15px"
        android:typeface="sans"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="成为我们的律师需要完成资料验证。"
        android:textSize="34px"
        android:layout_marginTop="19px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="填写认证信息"
        android:textSize="36px"
        android:textColor="#39a7b6"
        android:layout_marginTop="20px"
        android:layout_marginLeft="24px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        android:layout_marginTop="20px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名 :\t"
            android:textSize="32px"
            android:textColor="#39a7b6"
            />

        <EditText
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的真实姓名"
            android:textColorHint="#666666"
            android:textSize="32px"
            android:id="@+id/lvshishenhe_name"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别: "
            android:textSize="32px"
            android:textColor="#39a7b6"
            />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/kongxinyuan"
            android:layout_marginTop="2px"
            android:layout_marginLeft="120px"
            android:id="@+id/lvshishenhe_sex_nan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="32px"
            android:text="男"
            android:layout_marginLeft="20px"/>

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/kongxinyuan"
            android:layout_marginTop="2px"
            android:layout_marginLeft="170px"
            android:id="@+id/lvshishenhe_name_nv"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="32px"
            android:text="女"
            android:layout_marginLeft="20px"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执业律所 :\t"
            android:textSize="32px"
            android:textColor="#39a7b6"
            />

        <EditText
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写当前所在律所"
            android:textColorHint="#666666"
            android:textSize="32px"
            android:id="@+id/lvshishenhe_lvsuo"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执业证件号 :\t"
            android:textSize="32px"
            android:textColor="#39a7b6"
            />

        <EditText
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写执业证件号"
            android:textColorHint="#666666"
            android:textSize="32px"
            android:id="@+id/lvshishenhe_zhengjianhao"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/lvshishenhe_didianll"
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="执业地点 :\t"
            android:textSize="32px"
            android:textColor="#39a7b6"
            />

        <TextView
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#666666"
            android:text="请选择执业地区"
            android:textSize="32px"
            android:id="@+id/lvshishenhe_didian"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="65px"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px"
        android:id="@+id/lvshishenhe_leixingll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专长类型 :\t"
            android:textSize="32px"
            android:textColor="#39a7b6"
            />

        <TextView
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择1-3个类型，如同和纠纷，债务纠纷"
            android:textColorHint="#666666"
            android:textSize="24px"
            android:id="@+id/lvshishenhe_leixing"/>

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传资料"
        android:textSize="36px"
        android:textColor="#39a7b6"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            android:layout_marginLeft="24px">

            <ImageView
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/wode_denglu_logo"
                android:id="@+id/lvshishenhe_touxiang"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="头像必须是免冠正面照,图像要清晰"
                android:textSize="24px"
                android:textColor="#666666"
                android:layout_marginLeft="40px"/>

        </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        android:layout_marginTop="20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人简介"
            android:textSize="36px"
            android:textColor="#39a7b6"
            android:layout_marginLeft="24px"
            android:layout_marginTop="20px"/>
        <EditText
            android:id="@+id/lvshishenhe_jianjies"
            android:textSize="32px"
            android:layout_width="match_parent"
            android:layout_height="320px"
            android:padding="24px"
            android:layout_margin="24px"
            android:enabled="true"
            android:gravity="top"
            android:hint="请输入..."
            android:background="@mipmap/yuanjiaojuxing"/>

    <Button
        android:id="@+id/lvshishenhe_tijiao"
        android:layout_marginTop="40px"
        android:layout_width="400px"
        android:layout_height="60px"
        android:text="提交"
        android:textSize="36px"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/wode_denglu_anniu"
        android:textColor="#ffffff"/>

    </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
