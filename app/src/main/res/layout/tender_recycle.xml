<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:id="@+id/tender_ll">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/tender_touxiang"
                android:layout_width="68px"
                android:layout_height="68px"
                android:src="@mipmap/wode_denglu_logo"
                android:layout_marginLeft="20px"
                />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:orientation="vertical"
                android:layout_marginLeft="20px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43px"
                    android:orientation="horizontal"
                    android:layout_marginTop="15px">
                    <TextView
                        android:textSize="32px"
                        android:textColor="#222222"
                        android:id="@+id/tender_name"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="40px"
                        android:text="用户姓名"
                        android:gravity="center_vertical"
                        />

                    <Button
                        android:layout_width="200px"
                        android:layout_height="40px"
                        android:text="投标"
                        android:layout_marginRight="25px"
                        android:background="@mipmap/toubiaoanniu"
                        android:textColor="#ffffff"
                        android:textSize="24px"
                        android:id="@+id/tender_toubiao"/>

                </com.zhy.autolayout.AutoLinearLayout>



                <TextView
                    android:textSize="28px"
                    android:textColor="#5E5E5E"
                    android:layout_width="match_parent"
                    android:layout_height="40px"
                    android:text="发布时间"
                    android:gravity="center_vertical"
                    android:id="@+id/tender_time"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:textSize="32px"
            android:textColor="#5E5E5E"
            android:id="@+id/consult_huida_message"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:text="问题内容:"
            android:layout_marginLeft="24px"
            android:layout_marginRight="20px"/>
    
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="24px">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="北京市-海淀区"
            android:textSize="28px"
            android:textColor="#39a7b6"
            android:id="@+id/tender_didian"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报价: 1000.0 - 2000.0元"
            android:textSize="28px"
            android:textColor="#f57917"
            android:id="@+id/tender_baojia"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="案件类型:劳动仲裁"
            android:textSize="28px"
            android:textColor="#39a7b6"
            android:id="@+id/tender_leixing"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有6人投标"
            android:textSize="28px"
            android:textColor="#f57917"
            android:id="@+id/tender_jige"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="900px"
        android:layout_height="2px"
        android:background="#dddddd"
        android:layout_marginTop="10px"/>

</com.zhy.autolayout.AutoLinearLayout>