<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/consult_hd_touxiang"
                android:layout_width="68px"
                android:layout_height="68px"
                android:src="@mipmap/wode_denglu_logo"
                android:layout_marginLeft="20px"
                />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="20px">

                <TextView
                    android:textSize="32px"
                    android:textColor="#222222"
                    android:id="@+id/consult_hd_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:text="用户姓名"
                    android:gravity="center_vertical"/>

                <TextView
                    android:layout_below="@+id/consult_hd_name"
                    android:textSize="28px"
                    android:textColor="#5F5F5F"
                    android:id="@+id/consult_hd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="40px"
                    android:text="发布时间"
                    android:gravity="center_vertical"/>

                <TextView
                    android:background="@mipmap/yicaina"
                    android:id="@+id/zixun_yicaina"
                    android:layout_width="140px"
                    android:layout_height="120px"
                    android:layout_alignParentRight="true"
                    android:textSize="36px"
                    android:layout_marginRight="24px"
                    android:gravity="center"
                    android:textColor="#ff0000"/>

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:textSize="28px"
            android:textColor="#5F5F5F"
            android:id="@+id/consult_hd_message"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:text="问题内容:"
            android:layout_marginLeft="24px"
            android:layout_marginRight="20px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="900px"
        android:layout_height="20px"
        android:background="#dddddd"/>

</com.zhy.autolayout.AutoLinearLayout>