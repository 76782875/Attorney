<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wode_zhanghu_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginRight="95px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="我的账户"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="280px"
            android:orientation="vertical"
            android:background="#434343"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/wode_zhanghu_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00元"
                android:textSize="36px"
                android:textColor="#ffffff"
                android:layout_marginTop="92px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额 (元)"
                android:textSize="36px"
                android:textColor="#ffffff"
                android:layout_marginTop="10px"/>

        </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:id="@+id/wode_zhanghu_tixian">

        <ImageView
            android:layout_width="56px"
            android:layout_height="56px"
            android:layout_marginTop="22px"
            android:layout_marginLeft="24px"
            android:src="@mipmap/zhifumima"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:text="提现"
            android:textColor="#333333"
            android:textSize="32px"
            android:layout_marginLeft="30px"/>

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/wode_you"
            android:layout_marginTop="34px"
            android:layout_marginRight="24px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>
</com.zhy.autolayout.AutoLinearLayout>
