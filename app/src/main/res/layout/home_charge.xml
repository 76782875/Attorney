<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="230px"
            android:layout_height="100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:background="@mipmap/biankuang">

            <ImageView
                android:layout_width="55px"
                android:layout_height="55px"
                android:src="@mipmap/qiandai"
                android:layout_marginLeft="20px"
                android:layout_marginTop="5px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总收益"
                android:layout_marginLeft="80px"
                android:textSize="36px"
                android:layout_marginTop="13px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0元"
                android:textColor="#EFB960"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:textSize="32px"
                android:layout_marginBottom="5px"
                android:id="@+id/shouye_zongshouyi"/>

        </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="200px"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:background="@mipmap/biankuang"
            android:layout_marginLeft="24px"
            android:layout_marginTop="24px"
            android:gravity="center_vertical"
            android:id="@+id/shouye_shoufeishezhi">

        <ImageView
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/shezhi"
            android:layout_marginLeft="5px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收费设置"
                android:layout_marginLeft="5px"
                android:textSize="30px"/>

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="200px"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:background="@mipmap/biankuang"
            android:layout_marginTop="24px"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:id="@+id/shouye_tixian">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/tixian"
                android:layout_marginLeft="5px"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提现"
                android:layout_marginLeft="15px"
                android:textSize="30px"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="230px"
        android:layout_height="60px"
        android:text="查看明细"
        android:background="@mipmap/biankuang"
        android:gravity="center"
        android:textSize="32px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24px"
        android:id="@+id/shouye_chakanmingxi"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"
        android:layout_marginTop="40px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/shouye_zixunpingtai">

            <ImageView
                android:layout_width="90px"
                android:layout_height="95px"
                android:src="@mipmap/zixun"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="咨询平台"
                android:textSize="36px"
                android:gravity="center"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#dddddd"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/shouye_jingbiaopingtai">

            <ImageView
                android:layout_width="110px"
                android:layout_height="115px"
                android:src="@mipmap/jingbiao"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="竞标平台"
                android:textSize="36px"
                android:gravity="center"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#dddddd"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/shouye_jiangshishenqing">

            <ImageView
                android:layout_width="100px"
                android:layout_height="105px"
                android:src="@mipmap/jiangshi"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="讲师申请"
                android:textSize="36px"
                android:gravity="center"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="220px"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/shouye_wode_huida">

            <ImageView
                android:layout_width="100px"
                android:layout_height="105px"
                android:src="@mipmap/huida"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的回答"
                android:textSize="36px"
                android:gravity="center"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#dddddd"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/shouye_wodejingbiao">

            <ImageView
                android:layout_width="90px"
                android:layout_height="95px"
                android:src="@mipmap/wide_jingbiao"/>

            <TextView
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的竞标"
                android:textSize="36px"
                android:gravity="center"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#dddddd"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/shouye_wodefuwu">

            <ImageView
                android:layout_width="100px"
                android:layout_height="105px"
                android:src="@mipmap/fuwu"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的服务"
                android:textSize="36px"
                android:gravity="center"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>


</com.zhy.autolayout.AutoLinearLayout>