<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoufeishezhi_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginRight="95px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="设置"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        >

        <ImageView
            android:layout_marginLeft="24px"
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@mipmap/zixun"
            android:layout_marginTop="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话咨询"
            android:layout_marginLeft="115px"
            android:textSize="28px"
            android:textColor="#333333"
            android:layout_marginTop="23px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000.0元/次"
            android:layout_marginLeft="115px"
            android:textSize="28px"
            android:textColor="#333333"
            android:layout_marginTop="60px"
            android:id="@+id/shoufeishezhi_dianhua"/>

        <Button
            android:textSize="28px"
            android:layout_width="120px"
            android:layout_height="70px"
            android:text="收费"
            android:textColor="#ffffff"
            android:background="@mipmap/shoufeizhezhi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:layout_marginTop="36px"
            android:id="@+id/shoufeishezhi_dianhua_shezhi"/>

        <Button
            android:textSize="28px"
            android:layout_width="120px"
            android:layout_height="70px"
            android:text="开启"
            android:textColor="#ffffff"
            android:background="@mipmap/shoufeizhezhi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="164px"
            android:layout_marginTop="36px"
            android:id="@+id/shoufeishezhi_dianhua_kaiqi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:text="为用户提供电话服务"
            android:textSize="24px"
            android:textColor="#333333"
            android:layout_marginLeft="24px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        >

        <ImageView
            android:layout_marginLeft="24px"
            android:layout_width="90px"
            android:layout_height="90px"
            android:src="@mipmap/lvshixiangqing_naozhong"
            android:layout_marginTop="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约咨询"
            android:layout_marginLeft="115px"
            android:textSize="28px"
            android:textColor="#333333"
            android:layout_marginTop="23px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000.0元/次"
            android:layout_marginLeft="115px"
            android:textSize="28px"
            android:textColor="#333333"
            android:layout_marginTop="60px"
            android:id="@+id/shoufeishezhi_yuyue"/>

        <Button
            android:textSize="28px"
            android:layout_width="120px"
            android:layout_height="70px"
            android:text="收费"
            android:textColor="#ffffff"
            android:background="@mipmap/shoufeizhezhi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:layout_marginTop="36px"
            android:id="@+id/shoufeishezhi_yuyue_shezhi"/>

        <Button
            android:textSize="28px"
            android:layout_width="120px"
            android:layout_height="70px"
            android:text="开启"
            android:textColor="#ffffff"
            android:background="@mipmap/shoufeizhezhi"
            android:layout_alignParentRight="true"
            android:layout_marginRight="164px"
            android:layout_marginTop="36px"
            android:id="@+id/shoufeishezhi_yuyue_kaiqi"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:gravity="center_vertical"
            android:layout_alignParentBottom="true"
            android:text="和用户在约定的时间和地点,更直观谈论案件的情况"
            android:textSize="24px"
            android:textColor="#333333"
            android:layout_marginLeft="24px"/>

    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>

    <TextView
        android:textSize="26px"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24px"
        android:paddingRight="24px"
        android:layout_marginTop="60px"
        android:text="*您在不能提供服务的情况下,请把服务状态关闭,如果出现多次下单服务,未能及时回复我们将对您重新认证"/>

</com.zhy.autolayout.AutoLinearLayout>
