<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tixian_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_marginRight="95px"
            android:layout_width="0px"
            android:layout_height="88px"
            android:layout_weight="1"
            android:text="提现"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名:"
            android:textSize="36px"
            android:textColor="#2FA3B3"/>

        <EditText
            android:textSize="32px"
            android:hint="请输入真实姓名"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:textColor="#333333"
            android:background="#ffffff"
            android:id="@+id/tixian_name"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝账号:"
            android:textSize="36px"
            android:textColor="#2FA3B3"/>

        <EditText
            android:textSize="32px"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:hint="请输入已经实名认证的账号"
            android:textColorHint="#9A9A9A"
            android:textColor="#333333"
            android:background="#ffffff"
            android:id="@+id/tixian_zhanghao"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="24px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现金额:"
            android:textSize="36px"
            android:textColor="#2FA3B3"/>

        <EditText
            android:textSize="32px"
            android:hint="请输入提现金额"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:textColor="#333333"
            android:background="#ffffff"
            android:id="@+id/tixian_jine"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dddddd"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*最低提现金额100元"
        android:textSize="28px"
        android:textColor="#2FA3B3"
        android:layout_marginTop="20px"
        android:layout_marginLeft="24px"/>


    <Button
        android:layout_width="700px"
        android:layout_height="70px"
        android:background="@mipmap/wode_denglu_anniu"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:text="提交申请"
        android:textSize="36px"
        android:textColor="#ffffff"
        android:id="@+id/tixian_tijiao"/>

</com.zhy.autolayout.AutoLinearLayout>
