<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        >

        <ImageView
            android:id="@+id/servers_fanhui"
            android:layout_width="95px"
            android:layout_height="88px"
            android:src="@mipmap/wode_zuo"
            android:padding="17px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:text="我的服务"
            android:gravity="center"
            android:textSize="36px"
            android:textColor="#333333"
            />

    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#dddddd"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40px">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/servers_dianhuazixun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="150px">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@mipmap/dianhuazixun"/>

            <TextView
                android:gravity="center"
                android:layout_marginTop="15px"
                android:layout_width="150px"
                android:layout_height="50px"
                android:text="电话咨询"
                android:textSize="36px"
                android:textColor="#333333"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/servers_yuyuemiantan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="486px">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:src="@mipmap/yuyuemiantan"/>

            <TextView
                android:gravity="center"
                android:layout_marginTop="15px"
                android:layout_width="150px"
                android:layout_height="50px"
                android:text="预约面谈"
                android:textSize="36px"
                android:textColor="#333333"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
